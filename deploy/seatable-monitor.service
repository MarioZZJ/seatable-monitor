[Unit]
Description=SeaTable Task Monitor
After=network.target

[Service]
Type=simple
ExecStart=%h/.local/bin/uv run --project %h/Documents/project/seatable-monitor python -m seatable_monitor
WorkingDirectory=%h/Documents/project/seatable-monitor
EnvironmentFile=%h/.config/seatable-monitor/env
Restart=always
RestartSec=10

[Install]
WantedBy=default.target
